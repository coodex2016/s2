{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ],
        "paths": {
            "@shared": [
                "src/commons/shared/index"
            ],
            "@shared/*": [
                "src/commons/shared/*"
            ],
            "@core": [
                "src/commons/core/index"
            ],
            "@core/*": [
                "src/commons/core/*"
            ],
            "@env/*": [
                "src/environments/*"
            ],
            "@common/*": [
                "src/commons/*"
            ],
            "@global/*": [
                "src/globals/*"
            ],
            "@module/*": [
                "src/modules/*"
            ]
        }
    }
}
